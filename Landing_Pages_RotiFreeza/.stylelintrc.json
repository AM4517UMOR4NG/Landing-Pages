{
  "extends": [
    "stylelint-config-standard"
  ],
  "customSyntax": "postcss-syntax",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "layer",
          "screen",
          "responsive",
          "variants"
        ]
      }
    ]
  }
}
